<h2>New Game</h2>

<div class="list">
  <% @letters.each do |letter| %>
  <p class="list-item"><%= letter.capitalize %></p>
  <% end %>
</div>

<form action="/score" method="post" data-turbo="false">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :random, @letters %>
<label for="answer">What is the longest word you can find ?</label>
<input type="text" name="word" @letters>
<input type="submit" value="Play">
</form>
